---
import verification from '@/content/verification'

const { google, bing, pinterest } = verification

// Only render meta tags if verification codes are provided
// For DNS verification, leave these empty and use TXT records instead
---

{google && google.trim() && <meta name="google-site-verification" content={google} />}
{bing && bing.trim() && <meta name="msvalidate.01" content={bing} />}
{pinterest && pinterest.trim() && <meta name="p:domain_verify" content={pinterest} />}
