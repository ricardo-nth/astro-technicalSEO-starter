---
import { getContactInfo, getCompanyInfo, getNavigation } from '../../utils/content';

const contact = await getContactInfo();
const company = await getCompanyInfo();
const navigation = await getNavigation();
---

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-content">
      <!-- Company Info -->
      <div class="footer-section footer-company">
        <h3 class="footer-title">{company?.name}</h3>
        <p class="footer-tagline">{company?.tagline}</p>
        <p class="footer-description">{company?.description}</p>
      </div>

      <!-- Quick Links -->
      <div class="footer-section">
        <h4 class="footer-heading">Quick Links</h4>
        <nav class="footer-nav">
          {navigation?.primaryLinks?.map((link) => (
            <a href={link.url} class="footer-link">{link.label}</a>
          ))}
        </nav>
      </div>

      <!-- Contact Info -->
      <div class="footer-section">
        <h4 class="footer-heading">Contact</h4>
        <div class="footer-contact">
          {contact?.email && (
            <p>
              <a href={`mailto:${contact.email}`} class="footer-link">
                {contact.email}
              </a>
            </p>
          )}
          {contact?.phone && (
            <p>
              <a href={`tel:${contact.phone}`} class="footer-link">
                {contact.phone}
              </a>
            </p>
          )}
          {contact?.address && (
            <div class="footer-address">
              <p>{contact.address.street}</p>
              <p>{contact.address.city}, {contact.address.state} {contact.address.zip}</p>
            </div>
          )}
        </div>
      </div>

      <!-- Social Links -->
      <div class="footer-section">
        <h4 class="footer-heading">Follow Us</h4>
        <div class="footer-social">
          {contact?.social?.twitter && (
            <a href={contact.social.twitter} class="footer-social-link" aria-label="Follow us on Twitter">
              Twitter
            </a>
          )}
          {contact?.social?.linkedin && (
            <a href={contact.social.linkedin} class="footer-social-link" aria-label="Follow us on LinkedIn">
              LinkedIn
            </a>
          )}
          {contact?.social?.facebook && (
            <a href={contact.social.facebook} class="footer-social-link" aria-label="Follow us on Facebook">
              Facebook
            </a>
          )}
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p class="footer-copyright">
          &copy; {new Date().getFullYear()} {company?.name}. All rights reserved.
        </p>
        {navigation?.secondaryLinks && (
          <div class="footer-legal">
            {navigation.secondaryLinks.map((link) => (
              <a href={link.url} class="footer-legal-link">{link.label}</a>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: #111827;
    color: white;
    padding: 3rem 0 1rem;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-company {
    max-width: 300px;
  }

  .footer-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: white;
  }

  .footer-tagline {
    font-size: 1rem;
    color: #d1d5db;
    margin: 0 0 0.5rem 0;
    line-height: 1.5;
  }

  .footer-description {
    font-size: 0.875rem;
    color: #9ca3af;
    margin: 0;
    line-height: 1.6;
  }

  .footer-heading {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: white;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-contact p {
    margin: 0;
  }

  .footer-address {
    font-size: 0.875rem;
    color: #9ca3af;
    margin-top: 0.5rem;
  }

  .footer-address p {
    margin: 0;
    line-height: 1.4;
  }

  .footer-link {
    color: #d1d5db;
    text-decoration: none;
    transition: color 0.2s ease;
    font-size: 0.9rem;
  }

  .footer-link:hover {
    color: white;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .footer-social-link {
    color: #d1d5db;
    text-decoration: none;
    transition: color 0.2s ease;
    font-size: 0.9rem;
  }

  .footer-social-link:hover {
    color: white;
  }

  .footer-bottom {
    border-top: 1px solid #374151;
    padding-top: 1.5rem;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-copyright {
    font-size: 0.875rem;
    color: #9ca3af;
    margin: 0;
  }

  .footer-legal {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .footer-legal-link {
    color: #9ca3af;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .footer-legal-link:hover {
    color: #d1d5db;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 1.5rem;
    }

    .footer-company {
      grid-column: 1 / -1;
      max-width: none;
      margin-bottom: 1rem;
    }
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: 2rem 0 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-company {
      grid-column: 1;
      margin-bottom: 0;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .footer-legal {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-container {
      padding: 0 0.75rem;
    }

    .footer-social {
      flex-direction: column;
      gap: 0.5rem;
    }

    .footer-legal {
      flex-direction: column;
      gap: 0.5rem;
    }
  }

  /* Focus states for accessibility */
  .footer-link:focus,
  .footer-social-link:focus,
  .footer-legal-link:focus {
    outline: 2px solid #6366f1;
    outline-offset: 2px;
  }
</style>
