---
interface Props {
  company: {
    name: string;
    tagline?: string;
    description: string;
    founded?: number;
    teamSize?: string;
    location?: string;
    mission?: string;
    vision?: string;
    values?: string[];
  } | undefined;
}

const { company } = Astro.props;
---

{company && (
  <section class="company-overview">
    <div class="container">
      <div class="company-content">
        <div class="company-header">
          <h1>{company.name}</h1>
          {company.tagline && <p class="tagline">{company.tagline}</p>}
        </div>
        
        <div class="company-description">
          <p>{company.description}</p>
        </div>

        <div class="company-stats">
          {company.founded && (
            <div class="stat">
              <h3>Founded</h3>
              <p>{company.founded}</p>
            </div>
          )}
          {company.teamSize && (
            <div class="stat">
              <h3>Team Size</h3>
              <p>{company.teamSize}</p>
            </div>
          )}
          {company.location && (
            <div class="stat">
              <h3>Location</h3>
              <p>{company.location}</p>
            </div>
          )}
        </div>

        <div class="mission-vision">
          {company.mission && (
            <div class="mission">
              <h2>Our Mission</h2>
              <p>{company.mission}</p>
            </div>
          )}
          
          {company.vision && (
            <div class="vision">
              <h2>Our Vision</h2>
              <p>{company.vision}</p>
            </div>
          )}
        </div>

        {company.values && company.values.length > 0 && (
          <div class="values">
            <h2>Our Values</h2>
            <div class="values-grid">
              {company.values.map(value => (
                <div class="value-item">
                  <h3>{value}</h3>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </section>
)}

<style>
  .company-overview {
    padding: 4rem 0;
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .company-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .company-header h1 {
    font-size: 3rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 1rem;
  }

  .tagline {
    font-size: 1.5rem;
    color: #667eea;
    font-weight: 500;
    margin: 0;
  }

  .company-description {
    text-align: center;
    margin-bottom: 3rem;
  }

  .company-description p {
    font-size: 1.25rem;
    line-height: 1.7;
    color: #4a5568;
    max-width: 800px;
    margin: 0 auto;
  }

  .company-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
    padding: 2rem;
    background: #f8fafc;
    border-radius: 12px;
  }

  .stat {
    text-align: center;
  }

  .stat h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #4a5568;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat p {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a202c;
    margin: 0;
  }

  .mission-vision {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 3rem;
    margin-bottom: 4rem;
  }

  .mission, .vision {
    padding: 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 12px;
    color: white;
  }

  .mission h2, .vision h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .mission p, .vision p {
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0;
    opacity: 0.95;
  }

  .values {
    text-align: center;
  }

  .values h2 {
    font-size: 2.25rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 2rem;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .value-item {
    padding: 1.5rem;
    background: #f8fafc;
    border-radius: 12px;
    border: 2px solid #e2e8f0;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .value-item:hover {
    transform: translateY(-4px);
    border-color: #667eea;
  }

  .value-item h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1a202c;
    margin: 0;
  }

  @media (max-width: 768px) {
    .company-overview {
      padding: 3rem 0;
    }

    .company-header h1 {
      font-size: 2.25rem;
    }

    .tagline {
      font-size: 1.25rem;
    }

    .company-description p {
      font-size: 1.125rem;
    }

    .company-stats {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 1.5rem;
    }

    .mission-vision {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .mission, .vision {
      padding: 1.5rem;
    }

    .values h2 {
      font-size: 1.875rem;
    }

    .values-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 1rem;
    }
  }
</style>
