---
interface Props {
  contact: {
    email?: string;
    phone?: string;
    address?: {
      street: string;
      city: string;
      state?: string;
      zip?: string;
      country: string;
    };
    hours?: {
      monday?: string;
      tuesday?: string;
      wednesday?: string;
      thursday?: string;
      friday?: string;
      saturday?: string;
      sunday?: string;
    };
    social?: {
      twitter?: string;
      linkedin?: string;
      facebook?: string;
      instagram?: string;
      youtube?: string;
    };
  } | undefined;
}

const { contact } = Astro.props;

// Helper function to format business hours
function formatBusinessHours(hours: any) {
  if (!hours) return null;
  
  const daysOrder = ['monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday', 'sunday'];
  const dayNames = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];
  
  return daysOrder.map((day, index) => ({
    day: dayNames[index],
    hours: hours[day] || 'Closed'
  })).filter(item => item.hours !== undefined);
}

const businessHours = contact ? formatBusinessHours(contact.hours) : null;
---

{contact && (
