---
import type { CollectionEntry } from 'astro:content';

interface Props {
  teamMembers: CollectionEntry<'team'>[] | undefined;
}

const { teamMembers } = Astro.props;
---

{teamMembers && teamMembers.length > 0 && (
  <section class="team-overview">
    <div class="container">
      <div class="team-content">
        <div class="team-header">
          <h2>Meet Our Team</h2>
          <p>The experts behind our technical SEO solutions</p>
        </div>
        
        <div class="team-grid">
          {teamMembers
            .sort((a, b) => a.data.orderIndex - b.data.orderIndex)
            .map(member => (
              <div class="team-member">
                <div class="member-image">
                  <img 
                    src={member.data.image} 
                    alt={member.data.name}
                    loading="lazy"
                  />
                </div>
                
                <div class="member-info">
                  <h3>{member.data.name}</h3>
                  <p class="role">{member.data.role}</p>
                  {member.data.department && (
                    <p class="department">{member.data.department}</p>
                  )}
                  <p class="bio">{member.data.bio}</p>
                  
                  {member.data.expertise && member.data.expertise.length > 0 && (
                    <div class="expertise">
                      <h4>Expertise:</h4>
                      <div class="expertise-tags">
                        {member.data.expertise.map(skill => (
                          <span class="expertise-tag">{skill}</span>
                        ))}
                      </div>
                    </div>
                  )}
                  
                  {member.data.social && (
                    <div class="social-links">
                      {member.data.social.linkedin && (
                        <a 
                          href={member.data.social.linkedin} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          aria-label={`${member.data.name} LinkedIn profile`}
                        >
                          LinkedIn
                        </a>
                      )}
                      {member.data.social.twitter && (
                        <a 
                          href={member.data.social.twitter} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          aria-label={`${member.data.name} Twitter profile`}
                        >
                          Twitter
                        </a>
                      )}
                      {member.data.social.github && (
                        <a 
                          href={member.data.social.github} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          aria-label={`${member.data.name} GitHub profile`}
                        >
                          GitHub
                        </a>
                      )}
                    </div>
                  )}
                </div>
              </div>
            ))}
        </div>
      </div>
    </div>
  </section>
)}

<style>
  .team-overview {
    padding: 4rem 0;
    background: #f8fafc;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .team-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .team-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 1rem;
  }

  .team-header p {
    font-size: 1.25rem;
    color: #4a5568;
    max-width: 600px;
    margin: 0 auto;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .team-member {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    border: 1px solid #e2e8f0;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .team-member:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  }

  .member-image {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .member-image img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #667eea;
  }

  .member-info h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .role {
    font-size: 1.125rem;
    font-weight: 500;
    color: #667eea;
    text-align: center;
    margin-bottom: 0.25rem;
  }

  .department {
    font-size: 0.875rem;
    color: #4a5568;
    text-align: center;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .bio {
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .expertise {
    margin-bottom: 1.5rem;
  }

  .expertise h4 {
    font-size: 0.875rem;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .expertise-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .expertise-tag {
    background: #e2e8f0;
    color: #2d3748;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .social-links a {
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border: 1px solid #667eea;
    border-radius: 6px;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .social-links a:hover {
    background-color: #667eea;
    color: white;
  }

  @media (max-width: 768px) {
    .team-overview {
      padding: 3rem 0;
    }

    .team-header h2 {
      font-size: 2rem;
    }

    .team-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .team-member {
      padding: 1.5rem;
    }

    .member-image img {
      width: 100px;
      height: 100px;
    }

    .social-links {
      flex-direction: column;
      align-items: center;
    }

    .social-links a {
      text-align: center;
      min-width: 120px;
    }
  }
</style>
