---
// Import layout
import SiteLayout from '../layouts/SiteLayout.astro';

// Import components
import EnhancedSchema from '../components/seo/EnhancedSchema.astro';

// Import content utilities
import { getServices, getAllCaseStudies } from '../utils/content.ts';

// Get services data and case studies
const servicesData = await getServices();
const caseStudies = await getAllCaseStudies();

// Helper function to get case studies for a service
function getCaseStudiesForService(serviceId: string) {
  return caseStudies.filter(study => study.data.services.includes(serviceId));
}

// Page metadata
const metadata = {
  title: 'Our Services - Technical SEO Solutions',
  description: 'Comprehensive technical SEO services to boost your search engine visibility and website performance. From audits to optimization.',
  url: new URL(Astro.url.pathname, Astro.site).toString(),
  keywords: 'technical SEO, SEO audit, website optimization, performance optimization, schema markup',
  ogType: 'website',
  siteName: 'Technical SEO Starter',
  twitterCard: 'summary_large_image',
};
---

<SiteLayout metadata={metadata}>
  <EnhancedSchema
    type="webpage"
    title="Our Services - Technical SEO Solutions"
    description="Comprehensive technical SEO services to boost your search engine visibility and website performance."
    url={new URL(Astro.url.pathname, Astro.site).toString()}
    breadcrumbs={[
      { name: 'Home', url: '/' },
      { name: 'Services' }
    ]}
    services={servicesData?.services}
  />
  
  <main class="services-page">
    <div class="container">
      <!-- Page Header -->
      <section class="services-header">
        <h1>Our Services</h1>
        <p>Comprehensive technical SEO solutions designed to elevate your digital presence and drive measurable results.</p>
      </section>

      <!-- Services Grid -->
      {servicesData && servicesData.services && (
        <section class="services-grid">
          {servicesData.services.map(service => {
            const relatedCaseStudies = getCaseStudiesForService(service.id);
            
            return (
              <div class="service-card">
                <div class="service-header">
                  <h2>{service.name}</h2>
                  {service.popular && <span class="popular-badge">Popular</span>}
                </div>
                
                <p class="service-description">{service.description}</p>
                
                <div class="service-features">
                  <h3>What's Included:</h3>
                  <ul>
                    {service.features.map(feature => (
                      <li>{feature}</li>
                    ))}
                  </ul>
                </div>
                
                {service.category && (
                  <div class="service-category">
                    <span class="category-badge">{service.category}</span>
                  </div>
                )}
                
                {relatedCaseStudies.length > 0 && (
                  <div class="case-studies-section">
                    <h3>Success Stories:</h3>
                    <div class="case-studies-list">
                      {relatedCaseStudies.slice(0, 2).map(study => (
                        <div class="case-study-preview">
                          <h4>{study.data.title}</h4>
                          <p class="case-study-client">
                            {study.data.client} • {study.data.industry}
                          </p>
                          <div class="case-study-results">
                            {study.data.results.slice(0, 2).map(result => (
                              <div class="result-item">
                                <span class="result-value">{result.value}</span>
                                <span class="result-metric">{result.metric}</span>
                              </div>
                            ))}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
                
                <div class="service-cta">
                  <a href="/contact" class="btn-primary">Get Started</a>
                  <a href="#quote" class="btn-secondary">Request Quote</a>
                </div>
              </div>
            );
          })}
        </section>
      )}

      <!-- Call to Action Section -->
      <section class="services-cta">
        <div class="cta-content">
          <h2>Ready to Boost Your SEO Performance?</h2>
          <p>Let our technical SEO experts help you achieve better search rankings and improved website performance.</p>
          <div class="cta-buttons">
            <a href="/contact" class="btn-primary">Start Your Project</a>
            <a href="/case-studies" class="btn-secondary">View Case Studies</a>
          </div>
        </div>
      </section>
    </div>
  </main>
</SiteLayout>

<style>
  .services-page {
    padding: 4rem 0;
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .services-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .services-header h1 {
    font-size: 3rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 1rem;
  }

  .services-header p {
    font-size: 1.25rem;
    color: #4a5568;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
    gap: 3rem;
    margin-bottom: 4rem;
  }

  .service-card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .service-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
  }

  .service-header h2 {
    font-size: 1.75rem;
    font-weight: 600;
    color: #1a202c;
    flex: 1;
  }

  .popular-badge {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-left: 1rem;
  }

  .service-description {
    font-size: 1.125rem;
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .service-features {
    margin-bottom: 2rem;
  }

  .service-features h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 1rem;
  }

  .service-features ul {
    list-style: none;
    padding: 0;
  }

  .service-features li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: #2d3748;
  }

  .service-features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: #10b981;
    font-weight: bold;
  }

  .service-category {
    margin-bottom: 2rem;
  }

  .category-badge {
    background: #f0f4f8;
    color: #4a5568;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .case-studies-section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: #f8fafc;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
  }

  .case-studies-section h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 1rem;
  }

  .case-studies-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .case-study-preview {
    background: white;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #e2e8f0;
  }

  .case-study-preview h4 {
    font-size: 1rem;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 0.5rem;
  }

  .case-study-client {
    font-size: 0.875rem;
    color: #4a5568;
    margin-bottom: 1rem;
  }

  .case-study-results {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .result-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.75rem;
    background: #f0f4f8;
    border-radius: 8px;
    min-width: 100px;
  }

  .result-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: #667eea;
  }

  .result-metric {
    font-size: 0.75rem;
    color: #4a5568;
    text-align: center;
  }

  .service-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    display: inline-block;
    text-align: center;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
  }

  .btn-secondary {
    background: white;
    color: #667eea;
    padding: 0.875rem 2rem;
    border: 2px solid #667eea;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
    display: inline-block;
    text-align: center;
  }

  .btn-secondary:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
  }

  .services-cta {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 16px;
    padding: 4rem 2rem;
    text-align: center;
    margin-top: 4rem;
  }

  .cta-content h2 {
    font-size: 2.25rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .services-cta .btn-primary {
    background: white;
    color: #667eea;
  }

  .services-cta .btn-primary:hover {
    background: #f8fafc;
    transform: translateY(-2px);
  }

  .services-cta .btn-secondary {
    background: transparent;
    color: white;
    border-color: rgba(255, 255, 255, 0.3);
  }

  .services-cta .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: white;
  }

  @media (max-width: 768px) {
    .services-page {
      padding: 3rem 0;
    }

    .services-header h1 {
      font-size: 2.25rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .service-card {
      padding: 2rem;
    }

    .service-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .popular-badge {
      margin-left: 0;
    }

    .service-cta {
      flex-direction: column;
      align-items: stretch;
    }

    .case-study-results {
      justify-content: center;
    }

    .services-cta {
      padding: 3rem 1.5rem;
    }

    .cta-content h2 {
      font-size: 1.875rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-buttons a {
      min-width: 200px;
    }
  }
</style>
