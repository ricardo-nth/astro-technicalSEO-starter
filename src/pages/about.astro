---
// Import layout
import BaseLayout from '@/layouts/BaseLayout.astro';

// Import SEO utility
import { mergeSeoData } from '@/utils/seo';

// Import page content from Content Collections
import { getEntry } from 'astro:content';

// Import components
import Welcome from '@/components/Welcome.astro';

// Get merged SEO data
const { metadata, schemaData } = await mergeSeoData('about');

// Get page content - Content Collections ensures this exists
const pageContent = await getEntry('pages', 'about');
const { hero } = pageContent!.data;
---

<BaseLayout metadata={metadata} schemaData={schemaData}>
  <Welcome />
</BaseLayout>
